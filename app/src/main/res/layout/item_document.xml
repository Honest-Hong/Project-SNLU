<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:layout_width="@dimen/content_icon_size_small"
        android:layout_height="@dimen/content_icon_size_small"
        android:layout_margin="@dimen/content_icon_margin"
        android:src="@drawable/icon_document"
        android:id="@+id/imageView" />

    <TextView
        android:id="@+id/item_document_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_small"
        android:textColor="@color/colorBlack" />
</LinearLayout>