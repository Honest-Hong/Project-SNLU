<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    app:layout_goneMarginEnd="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/button_start"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_stars_24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/font_big"
            android:textColor="@color/colorBlue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        
        <View
            android:id="@+id/rect_amount"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_member_amount"
            app:layout_constraintLeft_toRightOf="@id/text_title"
            app:layout_constraintTop_toTopOf="@id/text_title"
            app:layout_constraintBottom_toBottomOf="@id/text_title" />

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_person_white_24dp"
            app:layout_constraintLeft_toLeftOf="@id/rect_amount"
            app:layout_constraintTop_toTopOf="@id/rect_amount"
            app:layout_constraintBottom_toBottomOf="@id/rect_amount"/>

        <TextView
            android:id="@+id/text_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:textColor="@color/colorWhite"
            app:layout_constraintLeft_toRightOf="@id/image_user"
            app:layout_constraintRight_toRightOf="@id/rect_amount"
            app:layout_constraintTop_toTopOf="@id/rect_amount"
            app:layout_constraintBottom_toBottomOf="@id/rect_amount"/>

        <ImageView
            android:id="@+id/image_state"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@id/rect_amount"
            app:layout_constraintTop_toTopOf="@id/text_title"
            app:layout_constraintBottom_toBottomOf="@id/text_title"/>

        <TextView
            android:id="@+id/text_proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/font_small"
            android:textColor="@color/colorBlue"
            app:layout_constraintLeft_toRightOf="@id/image_state"
            app:layout_constraintTop_toTopOf="@id/text_title"
            app:layout_constraintBottom_toBottomOf="@id/text_title"/>
        
        <TextView
            android:id="@+id/text_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/font_small"
            android:textColor="@color/colorBlue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_title"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>