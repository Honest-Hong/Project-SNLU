<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.snlu.snluapp.activity.SummaryActivity">

    <EditText
        android:id="@+id/summary_docu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:inputType="textMultiLine"
        android:background="@drawable/shape_rectangle_grey"/>
    <LinearLayout
        android:id="@+id/word_sentence_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/summary_word"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle_grey"
            android:listSelector="#FFB6C1" />

        <ListView
            android:id="@+id/summary_sentence"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle_grey"
            android:listSelector="#FFB6C1"/>
    </LinearLayout>

</LinearLayout>
