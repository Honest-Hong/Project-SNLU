<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.snlu.snluapp.activity.SummaryActivity"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_grey"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/summary_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:paddingRight="5px"
                    android:text="회의일시 :"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:windowSoftInputMode="adjustPan"/>
                <EditText
                    android:id="@+id/summary_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:paddingRight="5px"
                    android:text="부서 :"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:windowSoftInputMode="adjustPan"/>
                <EditText
                    android:id="@+id/summary_writer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:paddingRight="5px"
                    android:text="작성자 :"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:windowSoftInputMode="adjustPan"/>
            </LinearLayout>
            <EditText
                android:id="@+id/summary_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:paddingRight="5px"
                android:textSize="10dp"
                android:text="참석자 :"

                android:windowSoftInputMode="adjustPan"/>
            <EditText
                android:id="@+id/summary_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textSize="10dp"
                android:paddingTop="5px"
                android:text="회의 안건 :"
                android:windowSoftInputMode="adjustPan"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="회의 내용"/>

                <Button
                    android:id="@+id/button_add_folder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="폴더 추가"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/summary_sentence"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/shape_rectangle_grey"
        android:textSize="10dp"
        android:listSelector="#FFB6C1" />
</LinearLayout>
