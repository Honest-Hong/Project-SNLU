<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorGrey</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.Fab_Menu_Linear" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/fab_list_height</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:translationX">200dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppTheme.Fab_Menu_Fab">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:scaleType">center</item>
    </style>

</resources>
